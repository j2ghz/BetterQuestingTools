{
    "rust-analyzer.check.command": "clippy",
    "chat.tools.terminal.autoApprove": {
        "/^prek run$/": {
            "approve": true,
            "matchCommandLine": true
        },
        "/^cargo clippy --all-targets --all-features -- -D warnings$/": {
            "approve": true,
            "matchCommandLine": true
        },
        "/^cargo fmt$/": {
            "approve": true,
            "matchCommandLine": true
        },
        "/^cargo test$/": {
            "approve": true,
            "matchCommandLine": true
        }
    }
}